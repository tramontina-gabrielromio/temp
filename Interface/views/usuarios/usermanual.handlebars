<body>
  <div class="img-zoom-container" style="margin-top:95px; margin-left: 10px">
    <img id="imgManual" src="../manual/manual-1.png" width="852" height="603">
    <div>
      <div id="imgZoom" class="img-zoom-result" style="margin-left: 10px; border: none"></div>
      <div class="page-user" style="margin-top: 10px; margin-left: 10px">
        <button id="idGaveta_up" onclick="manualPage_inicial()" class="btn_left"><p><<</p></button>
        <button id="idGaveta_up" onclick="manualPage_down()" class="btn_left" style="margin-left:20px"><p><</p></button>
        <button id="idGaveta_down" onclick="manualPage_up()" class="btn_right" style="margin-left:10px"><p>></p></button>
        <button id="idGaveta_down" onclick="manualPage_final()" class="btn_right" style="margin-left:20px"><p>>></p></button>
      </div>
      <div class="page-user">
        <div class="info-column" style="margin-top: -10px">

<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/grafico/user.css">
    <div class="head-left">
      <a href="/usuarios/main"><button class="btn_home"></button></a>
    </div>
    <div class="head-right">
      <a href="/usuarios/teladesligar"><button class="btn_shutdown"></button></a>
    </div>
    {{#each erros}}
      <div class="alert alert-danger">{{texto}}</div>
    {{else}}
    {{/each}}
  </head>
  <body>
    <div class="title">Histórico</div>
    <form action="/usuarios/historico/buscar" method="POST" autocomplete="off">
      <div class="historico">
        <div class="first-column">
          <div class="search-user" autocomplete="off">
            <div>
              <div class="img"></div>
            </div>
            <div>
              <input spellcheck="false" class="use-keyboard-input" id="dataSearch1" type="text" name="dataSearch"></input>
            </div>
          </div>
        </div>
        <div class="second-column">
          <button id="buscar" type="submit" class="btns">
            <p>Buscar</p>
          </button>
        </div>
      </div>
    </form>
    <div class="historico">
      <div class="lista-eventos">
        <table id='Tabela1-title'>
          <tr style="height:65px; border: 1px solid #FAEFC0">

            <form action="/usuarios/historico/reordenar" method="POST" autocomplete="off">
              <input type="hidden" name="reordenar" value="referencia"></input>
              <td style="width: 113px; background-color: #202020; color: #FAEFC0">
                <button class="btn_ordenarHistorico" style="width: 111px; height:65px">Referência</button>
              </td>
            </form>

            <form action="/usuarios/historico/reordenar" method="POST" autocomplete="off">
              <input type="hidden" name="reordenar" value="descricao"></input>
              <td style="width: 308px; background-color: #202020; color: #FAEFC0">
                <button class="btn_ordenarHistorico" style="width: 306px; height:65px">Descrição</button>
              </td>
            </form>

            <form action="/usuarios/historico/reordenar" method="POST" autocomplete="off">
              <input type="hidden" name="reordenar" value="gaveta"></input>
              <td style="width: 78px; background-color: #202020; color: #FAEFC0">
                <button class="btn_ordenarHistorico" style="width: 76px; height:65px">Gaveta</button>
              </td>
            </form>
            
            <form action="/usuarios/historico/reordenar" method="POST" autocomplete="off">
              <input type="hidden" name="reordenar" value="dataRetirada"></input>
              <td style="width: 116px; background-color: #202020; color: #FAEFC0">
                <button class="btn_ordenarHistorico" style="width: 114px; height:65px">Data Retirada</button>
              </td>
            </form>

            <form action="/usuarios/historico/reordenar" method="POST" autocomplete="off">
              <input type="hidden" name="reordenar" value="horaRetirada"></input>
              <td style="width: 93px; background-color: #202020; color: #FAEFC0">
                <button class="btn_ordenarHistorico" style="width: 91px; height:65px">Hora Retirada</button>
              </td>
            </form>

            <form action="/usuarios/historico/reordenar" method="POST" autocomplete="off">
              <input type="hidden" name="reordenar" value="dataDevolucao"></input>
              <td style="width: 116px; background-color: #202020; color: #FAEFC0">
                <button class="btn_ordenarHistorico" style="width: 114px; height:65px">Data Devolução</button>
              </td>
            </form>

            <form action="/usuarios/historico/reordenar" method="POST" autocomplete="off">
              <input type="hidden" name="reordenar" value="horaDevolucao"></input>
              <td style="width: 108px; background-color: #202020; color: #FAEFC0">
                <button class="btn_ordenarHistorico" style="width: 106px; height:65px">Hora Devolução</button>
              </td>
            </form>

            <form action="/usuarios/historico/reordenar" method="POST" autocomplete="off">
              <input type="hidden" name="reordenar" value="usuario"></input>
              <td style="width: 140px; background-color: #202020; color: #FAEFC0">
                <button class="btn_ordenarHistorico" style="width: 138px; height:65px">Usuário</button>
              </td>
            </form>

            <form action="/usuarios/historico/reordenar" method="POST" autocomplete="off">
              <input type="hidden" name="reordenar" value="setor"></input>
              <td style="width: 120px; background-color: #202020; color: #FAEFC0">
                <button class="btn_ordenarHistorico" style="width: 118px; height:65px">Setor</button>
              </td>
            </form>

          </tr>
        </table>
        <div class="scroll" style="margin-top: -2px">
          <table id='Tabela1'>
            {{#each eventos}}
              <tr>
                <td style="width: 113px">{{referencia}}</td>
                <td style="text-align: left; width: 308px">{{descricao}}</td>
                <td style="width: 78px">{{gaveta}}</td>
                <td style="width: 116px">{{dataRetirada}}</td>
                <td style="width: 93px">{{horaRetirada}}</td>
                {{#if devolucao}}
                  <td style="width: 116px">{{dataDevolucao}}</td>
                  <td style="width: 108px">{{horaDevolucao}}</td>
                {{else}}
                  <td style="border-bottom:1px solid #FAEFC0; width: 116px; background-color: red; color: white">Não</td>
                  <td style="border-bottom:1px solid #FAEFC0; width: 108px; background-color: red; color: white">Não</td>
                {{/if}}
                <td style="width: 140px">{{usuario}}</td>
                <td style="width: 120px">{{setor}}</td>
              </tr>
            {{else}}
              </table>
              <h4 style="color:black; margin-top: 20px" align="center">Nenhum registro</h4>
            {{/each}}
          </table>
        </div>
      </div>
    </div>
    <div class="historico" style="margin-top: 15px">
      <div class="first-column">
        <form action="/usuarios/historico/skipm" method="POST" autocomplete="off">
          <input type="hidden" name="skip" type="text" value={{skip}}></input>
          <input type="hidden" id="dataSearch2" name="dataSearch"></input>
            <button id="btn_rc" type="submit" class="btns_historico">
              <p><</p>
            </button>
        </form>
      </div>
      <div class="info-column">
        <p>Página {{pgi}} de {{pgf}}</p>
      </div>
      <div class="second-column">
        <form action="/usuarios/historico/skipp" method="POST" autocomplete="off">
          <input type="hidden" name="skip" type="text" value={{skip}}></input>
          <input type="hidden" id="dataSearch3" name="dataSearch"></input>
          <button id="btn_av" type="submit" class="btns_historico">
            <p>></p>
          </button>
        </form>
      </div>
    </div>
    <div style="visibility: hidden" id='referencia'>{{busca}}</div>
  </body>
  <foot>
    <div class="footer">
      <a href="/usuarios/main"><button class="btn_return"></button></a>
    </div>
  </foot>
  <script>
    var auxBusca = document.getElementById("referencia").innerHTML
    document.getElementById("dataSearch1").value=auxBusca
    document.getElementById("dataSearch2").value=auxBusca
    document.getElementById("dataSearch3").value=auxBusca

    if ({{pgi}}<=1){
      document.getElementById("btn_rc").disabled=true
    }
    if ({{pgi}}>={{pgf}}){
      document.getElementById("btn_av").disabled=true
    }
  </script>
</html>